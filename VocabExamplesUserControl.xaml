<UserControl x:Class="EngVocabApp.VocabExamplesUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EngVocabApp"
             mc:Ignorable="d" 
             d:DesignHeight="30" 
             d:DesignWidth="600"
             MaxWidth="600"
             MaxHeight="30">
    <Grid>
        <Label x:Name="WordExampleLabel" Content="Word Example: "
               HorizontalAlignment="Left"
               Margin="0,0,0,0"
               VerticalAlignment="Center"/>
        <TextBox x:Name="WordExampleTextBox"
                 HorizontalAlignment="Left"
                 Height="23"
                 Margin="100,0,0,0"
                 TextWrapping="Wrap"
                 Text=""
                 VerticalAlignment="Center"
                 Width="460"
            />
        <Button x:Name="WordExampleDeleteButton"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Width="20"
                Height="20"
                Margin="570,0,0,0"
                Content="X"
                IsManipulationEnabled="True" Click="WordExampleDeleteButton_Click"
                />
    </Grid>
</UserControl>
